{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Katika{% endblock %}</title>

    {% block stylesheets %}
      {# On charge le CSS de bootstrap depuis le site directement #}
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
  </head>

  <body>
  <div class="container">
      
      <div class=" col-sm-offset-8 well">
          <h3>Utilisateur</h3>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          Connecté en tant que - {{ app.user.username }}
          
          <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger">Déconnexion</a>
        {% else %}
          <a href="{{ path('fos_user_security_login') }}" class="btn btn-success">Connexion</a>
        {% endif %}
       </div>
        <br/><br/>
        <h1>Katika</h1> 
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
   </div>

    <hr>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

  </body>
</html>
